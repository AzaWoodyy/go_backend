# Application Configuration
APP_PORT=8081

# Database Configuration
MYSQL_HOST=db # Service name in compose.yml
MYSQL_PORT=3306 # External port mapping for host access
MYSQL_PORT_INTERNAL=3306 # Internal Docker network port (usually 3306)
MYSQL_DATABASE=myapp_db
MYSQL_USER=myapp_user
MYSQL_PASSWORD=your_strong_password # Change this!
MYSQL_ROOT_PASSWORD=your_very_strong_root_password # Change this!

# Docker Host (if needed, often not required for simple setups)
# SERVER_HOST=host.docker.internal # Example if app needs to call back to host
